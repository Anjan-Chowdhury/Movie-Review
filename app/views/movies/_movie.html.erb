<div class ="col-md-4 blog-main box text-center" id="movie_<%= movie.id %>">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><%= movie.title %></h3>
			<p><%= movie.description %></p>
			<p><%= movie.movie_length %></p>
			<p><%= movie.director %></p>
			<p><%= movie.rating %></p>
			
			 
        </div>
		<div class="panel-body">
			<div style="color: #3BB2D6;"><%= time_ago_in_words(movie.created_at) %></div>
            <br>
            <div class="btn-group" role="group" aria-label="...">
            	<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myupdatemovie_<%= movie.id %>">
            		Edit
            	</button>
            	<%= link_to 'Destroy', movie, method: :delete, class: "btn btn-danger", remote: true %>
            </div>
        </div>
    </div>


    <%= form_for(movie, method: :put, remote: true) do |f| %>
    <div class="modal fade" id="myupdatemovie_<%= movie.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    	<div class="modal-dialog">
    		<div class="modal-content">
    			<div class="modal-header">
    				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    					<h4 class="modal-title" id="myModalLabel">Edit</h4>
    				</div>

    		<div class="modal-body">
              <div class="field">
                <%= f.label :title %><br>
                <%= f.text_area :title, class: "form-control " %>
                </div>
                   <div class="field">
                <%= f.label :description %><br>
                <%= f.text_area :description, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :movie_length %><br>
                <%= f.text_area :movie_length, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :director %><br>
                <%= f.text_area :director, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :rating %><br>
                <%= f.text_area :rating, class: "form-control" %>
              </div>
              
            </div>
    				<div class="modal-footer">
    					<button type="button" id="myupdatebutton_<%= movie.id %>" class= "btn btn-default" data-dimiss="modal">Close</button>
    						<%= submit_tag "Update",class: "btn btn-primary" %>
    					</div>
    					</div>
    				</div>
    			</div>
    			<% end %>
    		</div>
